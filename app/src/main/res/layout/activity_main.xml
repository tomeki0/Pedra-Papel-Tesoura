<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-20dp"
    tools:layout_editor_absoluteY="-1dp"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/txtJogada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="@string/txt_field_explain"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtCombinacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/txt_field_combs"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJogada" />

    <TextView
        android:id="@+id/txtPapel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="80dp"
        android:text="@string/btn_txt_PAPEL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPapel" />

    <TextView
        android:id="@+id/txtTesoura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="208dp"
        android:text="@string/btn_txt_TESOURA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTesoura" />

    <TextView
        android:id="@+id/txtPedra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="224dp"
        android:text="@string/btn_txt_PEDRA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPedra"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgPapel"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="180dp"
        android:onClick="cliqueBtnPapel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_papel" />

    <ImageView
        android:id="@+id/imgPedra"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="239dp"
        android:onClick="cliqueBtnPedra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_pedra" />

    <ImageView
        android:id="@+id/imgTesoura"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="235dp"
        android:onClick="cliqueBtnTesoura"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/btn_tesoura" />

    <FrameLayout
        android:id="@+id/videoContainer"
        android:layout_width="190dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/video_arredondado"
        android:clipToOutline="true"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCombinacao">

        <VideoView
            android:id="@+id/videoJogada"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="visible" />

    </FrameLayout>

    <TextView
        android:id="@+id/qtdeVitorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="59dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/letraV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qtdeEmpates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="59dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/letraE"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qtdeDerrotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="59dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/letraD"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/letraD"
        android:layout_width="25dp"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/letra_d" />

    <ImageView
        android:id="@+id/letraE"
        android:layout_width="25dp"
        android:layout_height="44dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/letra_e" />

    <ImageView
        android:id="@+id/letraV"
        android:layout_width="25dp"
        android:layout_height="44dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="50dp"
        android:onClick="exibirPontuacaoMaxima"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/letra_v" />

    <TextView
        android:id="@+id/txtPontuacaoMax"
        android:layout_width="265dp"
        android:layout_height="70dp"
        android:layout_margin="50dp"
        android:background="@drawable/video_arredondado"
        android:backgroundTint="#AD8CF6"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/videoContainer" />

    <TextView
        android:id="@+id/txtExibirRecorde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="91dp"
        android:autoText="false"
        android:text="@string/txt_mostrar_recorde"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>